{#
/**
 * @file
 * Display Suite 1 column template.
 *
 * Available variables:
 * - ds_content_wrapper: wrapper around content
 * - attributes: content region attributes
 * - ds_content: content region
 */
#}
{% set publication_date = ds_content.field_publication_date.0['#text'] %}
{% set publication_url = ds_content.node_title.0.0.0['#context'].entity_url %}
{% set publication_title = ds_content.node_title.0.0.0['#context'].output %}
{% set piwik_url_value = 'oshmail_2021_12' %}
{% set piwik_url = '?pk_campaign=' ~ piwik_url_value %}
<tr>
  <td colspan="2" style="font-size: 14px; color: #003399;vertical-align: top; padding-bottom: 5px;">
    {{ publication_date }}
  </td>
</tr>
<tr>
  <td style="font-size: 14px; color: #003399;vertical-align: top">
    >&nbsp;
  </td>
  <td>
    <a href="{{ publication_url }}{{ piwik_url }}" style="color: #003399; text-decoration: none; font-size: 14px; font-weight: 600;">
      {{ publication_title }}
    </a>
  </td>
</tr>
<tr>
  <td colspan="2" style="height: 25px;">&nbsp;</td>
</tr>


