{% extends "@bootstrap_barrio/layout/page.html.twig" %}
{% block head %}
<header id="navbar" role="banner" class="{{ navbar_classes }}">
  <div class="top-header-container">
    <div class="top-header-content row">
      <div class="header-logo">
        {{ page.top_header_logos }}
      </div>
      <div class="push-right">
        <div class="header-menu-news">
          {{ page.header }}
        </div>
        <div class="header-blocks">
          {{ page.header_form }}
        </div>
      </div>
    </div>
  </div>
   <nav{{ navbar_attributes }}>
      {% if page.primary_menu %}
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#CollapsingNavbar" aria-controls="CollapsingNavbar" aria-expanded="false" aria-label="Toggle navigation">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="collapse navbar-collapse" id="CollapsingNavbar">
            {{ page.primary_menu }}
        </div>
      {% endif %}
      {% if sidebar_collapse %}
        <button class="navbar-toggler navbar-toggler-left collapsed" type="button" data-toggle="collapse" data-target="#CollapsingLeft" aria-controls="CollapsingLeft" aria-expanded="false" aria-label="Toggle navigation"></button>
      {% endif %}
    </nav>
</header>
{% endblock %}

{% block content %}
  <div class="container">{{ page.breadcrumb }}</div>
  {% if page.sidebar_first %}
    <div class="content-two-columns">
      <div{{ sidebar_first_attributes }}>
        <aside class="section col-md-4" role="complementary">
          {{ page.sidebar_first }}
        </aside>
      </div>
  {% endif %}
  {% if page.sidebar_first %}
    <div id="main" class="col-md-8 two-column">
  {% else %}
    <div id="main">
  {% endif %}
      <section class="section">
        <a id="main-content" tabindex="-1"></a>
        {{ page.content }}
      </section>
  </div>
      {% if page.sidebar_first %}
    </div>
      {% endif %}
  {% if page.sidebar_second %}
    <div{{ sidebar_second_attributes }}>
      <aside class="section" role="complementary">
        {{ page.sidebar_second }}
      </aside>
    </div>
  {% endif %}
{% endblock %}

{% block footer %}
  <div class="{{ container }}">
    {% if page.footer_end%}
      <div class="site-footer__bottom">
        {{ page.footer_end }}
      </div>
    {% endif %}
  </div>
{% endblock %}
